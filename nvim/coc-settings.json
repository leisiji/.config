{
	"languageserver": {
		"ccls": {
			"command": "ccls",
			"filetypes": ["c", "cpp", "objc", "objcpp"],
			"rootPatterns": [".ccls", "compile_commands.json", ".vim/", ".git/", ".hg/"],
			"initializationOptions": {
				"cache": {
					"directory": "/tmp/ccls"
				}
			}
		},
		"bash": {
			"command": "bash-language-server",
			"filetypes": ["sh"],
			"args": ["start"]
		},
		"cmake": {
			"command": "cmake-language-server",
			"filetypes": ["cmake"],
			"rootPatterns": [
				"build/"
			],
			"initializationOptions": {
			"buildDirectory": "build"
			}
		}
	},
	"suggest.timeout": 500,
	"coc.source.file.shortcut": "F",
	"coc.source.file.priority": 89,
	"coc.source.file.ignoreHidden": false,
	"coc.source.around.shortcut": "A",
	"coc.source.around.priority": 88,
	"coc.source.buffer.shortcut": "B",
	"coc.source.buffer.priority": 87,
	"coc.source.buffer.ignoreGitignore": false,
	"coc.source.tag.shortcut": "T",
	"coc.source.tag.priority": 78,
	"list.insertMappings": {
		"<C-c>": "do:exit",
		"<C-p>": "action:preview",
		"<C-j>": "do:next",
		"<C-k>": "do:previous",
		"<C-x>": "do:toggle",
		"<C-s>": "do:switch",
		"<Down>": "prompt:next",
		"<Up>": "prompt:previous",
		"<C-v>": "prompt:paste"
	},
	"explorer.quitOnOpen": true,
	"explorer.icon.enableNerdfont": true,
	"explorer.openAction.strategy": "previousBuffer"
}
